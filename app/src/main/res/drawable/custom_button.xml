<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/theme_primary" />
            <stroke
                android:width="1dp"
                android:color="#F59B9B9B" />
            <corners
                android:radius="5dp" />
            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/theme_primary_light" />
            <stroke
                android:width="1dp"
                android:color="@color/theme_primary" />
            <corners
                android:radius="5dp" />
            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


</selector>
